# Configurações NPM para Windows
# Estas configurações ajudam a evitar problemas comuns no Windows

# Usar cache plano para evitar problemas de path no Windows
cache-max=31536000
prefer-offline=true

# Configurações para evitar problemas de node-gyp
node-gyp-rebuild=false

# Timeout maior para downloads lentos
fetch-retries=5
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configurações de build
build-from-source=false

# Configurações de registry
registry=https://registry.npmjs.org/

# Evitar problemas de permissão
unsafe-perm=true

# Configurações para legacy peer deps (compatibilidade)
legacy-peer-deps=true