# =================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# =================================

# URL de conexão com PostgreSQL
# Para desenvolvimento local Windows: postgresql://username:password@localhost:5432/database_name
# Para Neon (recomendado): postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://usuario:senha@localhost:5432/sistema_funerario

# Tipo de banco de dados (postgresql ou mysql)
DB_TYPE=postgresql

# Para MySQL, usar:
# DATABASE_URL=mysql://usuario:senha@localhost:3306/sistema_funerario  
# DB_TYPE=mysql

# Configurações do PostgreSQL (opcionais, para conexão local)
PGHOST=localhost
PGPORT=5432
PGUSER=usuario
PGPASSWORD=senha
PGDATABASE=sistema_funerario

# =================================
# CONFIGURAÇÃO DE SESSÃO
# =================================

# Chave secreta para criptografia de sessões
# Gere uma nova com: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
SESSION_SECRET=sua-chave-secreta-aqui

# Tipo de armazenamento de sessão: 'postgresql' ou 'memory'
# Para desenvolvimento: 'memory' (mais rápido)
# Para produção: 'postgresql' (persistente)
SESSION_STORE=postgresql

# =================================
# CONFIGURAÇÃO DE AMBIENTE
# =================================

# Ambiente da aplicação
NODE_ENV=development

# Porta do servidor
PORT=5000

# =================================
# CONFIGURAÇÃO ESPECÍFICA WINDOWS
# =================================

# Caminhos de diretórios (use ./ para Windows)
UPLOAD_PATH=./uploads
LOG_PATH=./logs

# Configuração de CORS (para desenvolvimento)
# Em produção, especifique domínios exatos
CORS_ORIGIN=http://localhost:5000

# =================================
# CONFIGURAÇÃO DE LOGS E DEBUG
# =================================

# Habilitar logs detalhados (true/false)
DEBUG=true

# Charset para compatibilidade Windows
CHARSET=UTF-8